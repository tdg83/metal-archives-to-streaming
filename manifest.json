{
  "manifest_version": 3,
  "name": "Metal Archives to streaming",
  "version": "1.5",
  "description": "Right-click Metal Archives release links to search on your favorite streaming service. Query: \"<Band name> <release name>\"",
  "permissions": [
    "contextMenus",
    "tabs",
    "storage"
  ],
  "host_permissions": [
	"*://*.metal-archives.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
	"gecko": {
		"id": "{8592e77e-41be-4013-9a40-4f3ef81788fa}"
	}
  }
}
