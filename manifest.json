{
  "manifest_version": 2,
  "name": "Metal Archives to streaming",
  "version": "1.3",
  "description": "Right-click Metal Archives release links to search on your favorite streaming service. Query: \"<Band name> <release name>\"",
  "permissions": [
    "contextMenus",
    "tabs",
    "storage",
    "*://*.metal-archives.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
